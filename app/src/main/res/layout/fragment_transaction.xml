<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_50sdp">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_8sdp">
                <ImageView
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/logo_remove"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_13sdp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_13sdp"
                        android:text="Nomor Kartu / Rekening :"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        style="">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tx_card"
                            android:background="@color/white"
                            android:textSize="@dimen/_18sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:id="@+id/tx_name"
                        android:layout_width="match_parent"
                        android:background="@color/grey_1"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_22sdp"
                        android:layout_gravity="center"
                        android:padding="@dimen/_8sdp"
                        android:gravity="center"
                        android:text="Memuat Penerima"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_cek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Cek Rekening"
                        android:background="@color/blue"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_14sdp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_13sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="Nominal"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        style="">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tx_amount"
                            android:background="@color/white"
                            android:textSize="@dimen/_18sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_13sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="Keterangan"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        style="">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tx_desc"
                            android:background="@color/white"
                            android:textSize="@dimen/_15sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="2"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_action"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Transfer Sekarang"
                        android:background="@color/teal_700"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_14sdp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <include layout="@layout/loading_layout"/>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>